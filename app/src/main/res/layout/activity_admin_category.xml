<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    T<TextView
    android:id="@+id/slogan_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp"
    android:text="Add New Product"
    android:textSize="25dp"
    android:textAlignment="center"
    android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/slogan_category"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/categorybread"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/categorybread" />

        <ImageView
            android:id="@+id/categorydoughnut"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/categorydoughnut" />
        <ImageView
            android:id="@+id/categorycupcake"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/categorycupcake"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/categorypizza"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/categorypizza" />

        <ImageView
            android:id="@+id/categorycake"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/categorycake" />
        <ImageView
            android:id="@+id/categorybun"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/categorybun"/>

    </LinearLayout>
</RelativeLayout>